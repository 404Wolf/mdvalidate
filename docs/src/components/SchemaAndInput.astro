---
import { Check, X } from "@lucide/astro";
import { Code } from "@astrojs/starlight/components";

interface Props {
  schema: string;
  input: string;
  valid?: boolean;
  title?: string;
  output?: string;
}

const { schema, input, valid, output } = Astro.props;
---

<div
  class="not-content relative h-full w-full rounded-sm bg-gray-100 p-4 dark:bg-gray-800"
>
  <div class="absolute -top-2 -right-2 z-10 scale-200">
    {valid ? <Check class="text-green-500" /> : <X class="text-red-500" />}
  </div>

  <div class="flex h-full items-stretch justify-stretch gap-4">
      <div class="h-full w-1/2 rounded-sm">
        <div class="text-xs font-semibold text-gray-600 dark:text-gray-400 mb-1">schema.mds</div>
        <div class="overflow-x-auto">
          <Code code={schema} lang="markdown" class="p-2"  />
        </div>
      </div>

      <div class="h-full w-1/2 rounded-sm">
        <div class="text-xs font-semibold text-gray-600 dark:text-gray-400 mb-1">input.md</div>
        <div class="overflow-x-auto">
          <Code code={input} lang="markdown" class="p-2" />
        </div>
      </div>
    </div>
  {valid && output && (
    <div class="mt-4 rounded-sm bg-gray-200 p-2 dark:bg-gray-700">
      <div class="text-xs font-semibold text-gray-600 dark:text-gray-400 mb-1">Output:</div>
      <Code code={output} lang="json" class="p-2" />
    </div>
  )}
</div>
